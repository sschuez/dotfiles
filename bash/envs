# Editor used by CLI
export EDITOR="nvim"
export SUDO_EDITOR="$EDITOR"

# Essential environment variables from your current setup
export HOMEBREW_NO_ANALYTICS=1
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export THOR_MERGE="nvim -d"
export DOCKER_BUILDKIT=1

# Homebrew paths
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"
export PATH="/opt/homebrew/opt/openssl@3/bin:$PATH"
export LDFLAGS="-L/opt/homebrew/opt/openssl@3/lib"
export CPPFLAGS="-I/opt/homebrew/opt/openssl@3/include"
export PKG_CONFIG_PATH="/opt/homebrew/opt/openssl@3/lib/pkgconfig"
export RUBY_CONFIGURE_OPTS="--with-libyaml-dir=$(brew --prefix libyaml)"

# Development paths
export PATH="$HOME/.rbenv/bin:./bin:./node_modules/.bin:$PATH:/usr/local/sbin:$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH:/Users/stephenschuz/.local/bin"

# Node Version Manager
export NVM_DIR="$HOME/.nvm"

# Source your custom API keys if they exist
if [ -f ~/code/dotfiles/api_keys ]; then
    source ~/code/dotfiles/api_keys
fi

# Bat theme (for better file previews)
export BAT_THEME=ansi